{% extends 'base.html.twig' %}

{% block title %}Prime index{% endblock %}

{% block body %}
    <h1>Prime index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Paymentmode</th>
                <th>Amount</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prime in primes %}
            <tr>
                <td>{{ prime.id }}</td>
                <td>{{ prime.type }}</td>
                <td>{{ prime.paymentmode }}</td>
                <td>{{ prime.amount }}</td>
                <td>{{ prime.description }}</td>
                <td>
                    <a href="{{ path('app_prime_show', {'id': prime.id}) }}">show</a>
                    <a href="{{ path('app_prime_edit', {'id': prime.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_prime_new') }}">Create new</a>
{% endblock %}
