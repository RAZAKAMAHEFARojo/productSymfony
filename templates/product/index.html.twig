{% extends 'base.html.twig' %}

{% block title %}Product Index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Product List</h1>
        <a href="{{ path('app_product_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Cover</th>
                <th>Stock</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price | number_format(2, ',', ' ') }} MGA</td>
                <td>
                    {% if product.cover %}
                        <img src="{{ asset('uploads/' ~ product.cover) }}" alt="{{ product.name }}" class="img-thumbnail" style="max-width: 100px;">
                    {% else %}
                        <span class="text-muted">No image</span>
                    {% endif %}
                </td>
                <td>{{ product.stock }}</td>
                <td class="text-center">
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i> Show
                    </a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center text-muted">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="d-flex justify-content-center">
        <!-- Pagination (if using KnpPaginatorBundle) -->
        {% if products is iterable %}
            {{ knp_pagination_render(products) }}
        {% endif %}
    </div>
</div>
{% endblock %}
